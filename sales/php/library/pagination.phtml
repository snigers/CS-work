 * Пагинация.
 *
 * @var umiTemplaterPHP|ViewPhpExtension|DemomarketPhpExtension $this
 * @var array $variables
 */

if (!$this->canShowPagination($variables)) {
	return;
}
$class = (isset($variables['class'])) ? $variables['class'] : "";
$pagination = $this->macros('system', 'numpages', [$variables['total'], $variables['per_page']]);
?>

<section class="pagination <?= $class ?>">
	<?= $this->render($pagination, 'library/pagination/previous_page') ?>
	<?= $this->render($pagination, 'library/pagination/page_list') ?>
	<?= $this->render($pagination, 'library/pagination/next_page') ?>	
</section>
