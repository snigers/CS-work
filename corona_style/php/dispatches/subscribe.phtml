									<?php endif; ?>
								/>
								<span></span>
								<?= $newsletter['disp_name'] ?>
							</label>
						</div>
					<?php endforeach; ?>
				</div>
			<?php endif; ?>
		<?php else: ?>
			<div>
				<input type="text"
				       value="<?= $this->translate('e-mail') ?>"
				       required
				       class="input"
				       id="subscribe"
				       name="sbs_mail" />
			</div>
		<?php endif; ?>

